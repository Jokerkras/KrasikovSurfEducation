<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".mvp.activities.MemDescriptionActivity"
        android:orientation="vertical"
        android:background="@color/colorBackground_2">
    <androidx.appcompat.widget.Toolbar
            android:background="@color/colorBackground_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_bottom_navigation_view"
            android:layout_marginLeft="@dimen/margin_mem_description_toolBar"
            android:layout_marginRight="@dimen/margin_mem_description_toolBar">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">
                <ImageButton
                        android:id="@+id/btn_close"
                        android:paddingTop="12dp"
                        android:background="@color/colorBackground_2"
                        android:src="@drawable/ic_close"
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:contentDescription="@string/nothing" />

                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageView_owner"
                        android:src="@drawable/avatar"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="62dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="62dp"/>
                <TextView
                        android:text="Vasya"
                        android:paddingTop="11dp"
                        android:id="@+id/textView_owner_name"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="118dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="118dp"/>
                <ImageButton
                        android:id="@+id/btn_share"
                        android:paddingTop="12dp"
                        android:background="@color/colorBackground_2"
                        android:src="@drawable/ic_share_toolbar"
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true" />
            </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/textView_title"
                    android:transitionName="memTitle"
                    android:fontFamily="@font/roboto_medium"
                    android:padding="@dimen/padding_mem_title"
                    android:textSize="@dimen/text_size_mem_decription_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:id="@+id/imageView_mem_content"
                    android:transitionName="memImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_mem_description_toolBar"
                    android:gravity="center_vertical">
                <TextView
                        android:id="@+id/textView_date"
                        android:layout_width="wrap_content"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="#CCFFFFFF"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />
                <ImageButton
                        android:id="@+id/imageButton_isFavorite"
                        android:layout_width="wrap_content"
                        android:background="@color/colorBackground_2"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
            </RelativeLayout>
            <TextView
                    android:id="@+id/textView_description"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="@dimen/text_size_button"
                    android:layout_marginLeft="@dimen/margin_mem_description_toolBar"
                    android:layout_marginRight="@dimen/margin_mem_description_toolBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>