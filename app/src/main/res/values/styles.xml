<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBackground_1</item>
        <item name="colorPrimaryDark">@color/colorBackground_2</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorError">@color/colorError</item>
        <item name="android:colorBackground">@color/colorBackground_1</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorBackground_1</item>
        <item name="colorPrimaryDark">@color/colorBackground_1</item>
        <item name="android:colorBackground">@color/colorBackground_1</item>
    </style>

    <style name="TextFieldBoxesAuth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/text_size_text_fields</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:layout_marginLeft">@dimen/margin_side_text_fields</item>
        <item name="android:layout_marginRight">@dimen/margin_side_text_fields</item>
        <item name="android:layout_height">@dimen/height_edit_text_login</item>
        <item name="primaryColor">@color/colorAccent</item>
        <item name="panelBackgroundColor">@color/colorBackground_2</item>
        <item name="errorColor">@color/colorError</item>
        <item name="manualValidateError">true</item>
    </style>
    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_button</item>
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:background">@drawable/button_ripple</item>
        <item name="android:layout_marginRight">@dimen/margin_side_text_fields</item>
        <item name="android:layout_marginLeft">@dimen/margin_side_text_fields</item>
        <item name="android:textColor">@color/colorBackground_1</item>
    </style>

    <style name="BottomNavigationView">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorAccent</item>
    </style>

    <style name="ToolBar">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text_size_toolbar</item>
    </style>
</resources>
